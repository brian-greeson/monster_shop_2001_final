<%= form_tag '/profile', method: :post do |f| %>
  <%= label_tag :name, "Name" %>
  <%= text_field_tag :name, "#{@user.name}" %>
  <%= label_tag :street_address, "Street Address" %>
  <%= text_field_tag :street_address, "#{@user.street_address}" %>
  <%= label_tag :city, "City" %>
  <%= text_field_tag :city, "#{@user.city}" %>
  <%= label_tag :state, "State" %>
  <%= text_field_tag :state, "#{@user.state}" %>
  <%= label_tag :zip_code, "Zip Code" %>
  <%= text_field_tag :zip_code, "#{@user.zip_code}" %>
  <%= label_tag :email_address, "Email Address" %>
  <%= text_field_tag :email_address, "" %>
  <%= label_tag :password, "Password" %>
  <%= password_field_tag :password, "" %>
  <%= label_tag :password_confirmation, "Confirm Password" %>
  <%= password_field_tag :password_confirmation, "" %>
  <%= submit_tag "Submit" %>
<% end %>
